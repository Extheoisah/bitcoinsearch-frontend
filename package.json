{
  "name": "bitcoin-search-engine",
  "description": "Bitcoin related publications search engine",
  "version": "1.18.0",
  "private": true,
  "dependencies": {
    "@chakra-ui/react": "^1.8.9",
    "@elastic/react-search-ui": "1.18.0",
    "@elastic/react-search-ui-views": "1.18.0",
    "@elastic/search-ui": "1.18.0",
    "@elastic/search-ui-app-search-connector": "1.18.0",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "framer-motion": "^6.5.1",
    "html-to-react": "^1.5.0",
    "node-sass": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hotkeys-hook": "^4.3.2",
    "react-icons": "^4.7.1",
    "react-scripts": "^5.0.0",
    "sanitize-html": "^2.8.0"
  },
  "devDependencies": {
    "eslint": "^8.32.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "prettier": "2.8.3",
    "rewire": "^6.0.0"
  },
  "scripts": {
    "start": "GENERATE_SOURCEMAP=false react-scripts start",
    "build": "GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "eslint:check": "eslint src --ext .js,.jsx",
    "eslint:fix": "eslint src --ext .js,.jsx --fix",
    "prettier:check": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "check-code": "npm run eslint:check",
    "format-code": "npm run eslint:fix && npm run prettier:fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
